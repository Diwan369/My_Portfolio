# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git!

# Django Settings
# Generate a new secret key from: https://djecrety.ir/
SECRET_KEY=your-secret-key-here-generate-from-djecrety
DEBUG=False

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Allowed Hosts (add your deployed domain)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain-here.onrender.com

# CSRF Trusted Origins for Render deployment
CSRF_TRUSTED_ORIGINS=https://yourdomain-here.onrender.com
